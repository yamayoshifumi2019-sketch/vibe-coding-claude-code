// Prisma schema for English Vocabulary Learning App

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Main vocabulary word model
model Word {
  id            Int       @id @default(autoincrement())
  word          String    @unique
  pronunciation String    // IPA phonetic notation
  definition    String    // Simple English definition (B1-B2 level)
  usageTip      String?   // Short usage tip in easy English
  partOfSpeech  String    // noun, verb, adjective, adverb, etc.
  difficulty    Int       @default(1) // 1-5 scale (1=easy, 5=hard)
  createdAt     DateTime  @default(now())

  examples  Example[]
  synonyms  Synonym[]
  antonyms  Antonym[]
}

// Example sentences for each word
model Example {
  id     Int    @id @default(autoincrement())
  wordId Int
  text   String // Natural example sentence
  word   Word   @relation(fields: [wordId], references: [id], onDelete: Cascade)
}

// Synonyms (similar words)
model Synonym {
  id     Int    @id @default(autoincrement())
  wordId Int
  text   String // The synonym word
  word   Word   @relation(fields: [wordId], references: [id], onDelete: Cascade)
}

// Antonyms (opposite words)
model Antonym {
  id     Int    @id @default(autoincrement())
  wordId Int
  text   String // The antonym word
  word   Word   @relation(fields: [wordId], references: [id], onDelete: Cascade)
}
